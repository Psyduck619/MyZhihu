/* pages/my/my.wxss */
.container{
  background: #F0F4F3;
  width: 750rpx;
  padding: 15rpx 0;
}
.container .btn{
  width: 100%;
  height: 180rpx;
}
.container .userinfo{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 100%;
  height: 180rpx;
  padding: 30rpx 22rpx 10rpx 22rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
  line-height: 40rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #dcdcdc;
  box-shadow: 0 2px 5px #eeeeee;
}
.container .userinfo .content{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.container .userinfo image{
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  position: relative;
  left: -60rpx;
}
.container .userinfo .text{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  position: relative;
  left: -220rpx;
  top: 5rpx;
}
.container .userinfo .userinfo-nickname{
  font-size: 36rpx;
  font-weight: bold;
}
.container .userinfo .setting{
  color: #999;
  font-size: 30rpx;
  position: relative;
  top: -5rpx;
}
.container .mylist{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 100%;
  height: 120rpx;
  padding: 30rpx 22rpx 10rpx 22rpx;
  background-color: #fff;
  line-height: 40rpx;
  margin-top: 5rpx;
}
.container .mylist .idx{
  display: flex;
  flex-direction: row;
}
.container .mylist image{
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  position: relative;
  left: 30rpx;
}
.container .mylist text{
  position: relative;
  left: 70rpx;
  font-size: 32rpx;
  font-weight: 520;
}