.answer{
  background: #F0F4F3;
  width: 750rpx;
}
.answer .head{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 100%;
  padding: 20rpx 22rpx 20rpx 22rpx;
  background-color: #fff;
  margin-bottom: 5rpx;
  line-height: 40rpx;
}
.answer .head .title{
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.answer .head .answer-num{
  color: #999;
  font-size: 26rpx;
}
.answer .for-answer{
  background-color: #fff;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 75rpx;
  margin-top: 6rpx;
  padding: 20rpx 0 20rpx 0;
}
.answer .for-answer .invite{
  width: 375rpx;
  display: flex;
  justify-content: center;
  border-right: 3rpx solid #d2d2d2;
  /* justify-content: center;
  text-align: center; */
}
.answer .for-answer .write{
  width: 375rpx;
  display: flex;
  justify-content: center;
  border-left: 3rpx solid #d2d2d2;
}
.answer .for-answer image{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  margin: 5rpx 10rpx 0 0;
}
.answer .for-answer text{
  font-size: 30rpx;
  color: #3181f2;
  font-weight: 550;
}

/* 回答主体 */
.answer-content{
  margin-top: 18rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  padding: 10rpx 25rpx 115rpx 27rpx;
  background-color: #fff;
  margin-bottom: 5rpx;
  line-height: 40rpx;
  margin-bottom: 120rpx;
}
.answer-content .head{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: -10rpx;
}
.answer-content .info{
  display: flex;
  flex-direction: row;
}
.answer-content .head image{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 45rpx;
  margin-right: 20rpx;
}
.answer-content .head .name{
  display: block;
  font-size: 32rpx;
  font-weight: bold;
}
.answer-content .head .tag{
  color: #999;
  font-size: 26rpx;
}
.answer-content .head .focus{
  height: 65rpx;
  width: 150rpx;
  background-color: #f6f6f6;
  border-radius: 10rpx;
  margin-top: 8rpx;
}
.answer-content .head .focus text{
  font-size: 30rpx;
  color: #3181f2;
  font-weight: 550;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 65rpx;
}
.answer-content .head .focus .active{
  color: #999;
}
.answer-content .body image{
  width: 690rpx;
}
.answer-content .body text{
  height: 32rpx;
  line-height: 50rpx;
}
.answer-content .time{
  color: #999;
  font-size: 26rpx;
  margin-top: 25rpx;
}
/* 底部栏 */
.answer .bottom{
  width: 100%;
  background-color: #fff;
  border-top: #eee solid 1rpx;
  padding: 15rpx 22rpx 15rpx 22rpx;
  position: fixed;
  bottom: 0;
}
.answer .bottom .left{
  float: left;
  width:230rpx;
  height:80rpx;
  border-radius:50rpx;
  /* background-color: aqua; */
  border: #347bf1 solid 3rpx;
  padding: 20rpx 22rpx 20rpx 22rpx;
  display: flex;
  justify-content: space-between;
} 
.answer .bottom .left image{
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
}
.answer .bottom .left text{
  font-size: 30rpx;
  color: #3181f2;
  font-weight: 550;
  line-height: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.answer .bottom .left .active{
  color: #999;
}
.answer .bottom .right{
  width: 320rpx;
  float: right;
  display: flex;
  justify-content: space-between;
}
.answer .bottom .right image{
  width: 46rpx;
  height: 46rpx;
  display: flex;
  justify-content: center;
  margin: 0 27rpx 0 27rpx;
}
.answer .bottom .right .package{
  width: 100rpx;
  display: flex;
  flex-direction: column;
  color: #999;
  font-size: 26rpx;
  text-align: center;
}
